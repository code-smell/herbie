{% extends "main.twig" %}

{% block content %}
<div class="content-container">
    <div class="container">
        <div class="pure-g">
            <div class="pure-u-1 content">
                {% if error.page.code == 404 %}
                <h1>Page not found</h1>
                <p>Oops, Something got wrong. The page or ressource could not be found.</p>
                {% else %}
                <h1>Error</h1>
                <p>An error happend.</p>
                <table class="pure-table pure-table-horizontal" width="100%">
                    <tr>
                        <td>Code</td>
                        <td>{{ page.error.code }}</td>
                    </tr>
                    <tr>
                        <td>Message</td>
                        <td>{{ page.error.message }}</td>
                    </tr>
                    <tr>
                        <td>File</td>
                        <td>{{ page.error.file }}</td>
                    </tr>
                    <tr>
                        <td>Line</td>
                        <td>{{ page.error.line }}</td>
                    </tr>
                    <tr>
                        <td>Trace</td>
                        <td>{{ page.error.trace|nl2br }}</td>
                    </tr>
                </table>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
