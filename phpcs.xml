<?xml version="1.0"?>
<ruleset name="Herbie coding standard">
    <description>Herbie coding standard</description>

    <!-- display progress -->
    <arg value="p"/>

    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- inherit rules from: -->
    <rule ref="PSR2"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- Paths to check -->
    <file>src/config</file>
    <file>src/messages</file>
    <file>src/plugins/markdown/markdown.php</file>
    <file>src/plugins/shortcode</file>
    <file>src/plugins/textile/textile.php</file>
    <file>src/plugins/twig/classes</file>
    <file>src/plugins/twig/twig.php</file>
    <file>src/system</file>
</ruleset>