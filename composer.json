{
    "name": "getherbie/herbie",
    "homepage": "http://www.getherbie.org",
    "description": "Herbie is a flat-file CMS & blog system. Simple installation - no database - just text files.",
    "keywords": ["herbie", "flat-file", "cms", "blog"],
    "type": "library",
    "license":"BSD-3-Clause",
    "require": {
        "php": "^7.1.3",
        "symfony/yaml": "^4.2",
        "getherbie/composer": "^1.0.0",
        "getherbie/plugin-markdown": "dev-master",
        "getherbie/plugin-shortcode": "dev-master",
        "getherbie/plugin-textile": "dev-master",
        "getherbie/plugin-twig": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Herbie\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "scripts": {
        "test": [
            "@phpcs",
            "@phpunit"
        ],
        "phpcbf": "./vendor/bin/phpcbf",
        "phpcs": "./vendor/bin/phpcs",
        "phpunit": "./vendor/bin/phpunit"
    }
}
